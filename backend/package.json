{
	"name": "backend",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"start": "node dist/src/index.js",
		"dev": "nodemon ./src/index.ts",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check --write .",
		"db:push": "drizzle-kit push:sqlite --config=drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=drizzle.config.ts",
		"db:generate": "drizzle-kit generate:sqlite --config=drizzle.config.ts",
		"db:init": "node ../init-sqlite.js",
		"db:apply-schema": "node scripts/apply-schema.js",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.658.1",
		"@aws-sdk/s3-request-presigner": "^3.658.1",
		"@clerk/clerk-sdk-node": "^5.0.28",
		"@libsql/client": "^0.4.0-pre.5",
		"better-sqlite3": "^11.8.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.29.3",
		"express": "^4.19.2",
		"jwt-decode": "^4.0.0",
		"multer": "^1.4.5-lts.1",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/better-sqlite3": "^7.6.9",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/multer": "^1.4.12",
		"@types/pg": "^8.11.6",
		"@types/sqlite3": "^3.1.11",
		"@types/supertest": "^6.0.2",
		"@vitest/coverage-v8": "^3.0.8",
		"@vitest/ui": "^3.0.8",
		"drizzle-kit": "^0.19.1",
		"nodemon": "^3.1.4",
		"supertest": "^7.0.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.5.4",
		"vitest": "^3.0.8"
	}
}
